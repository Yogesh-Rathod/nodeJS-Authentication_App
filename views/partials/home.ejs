<div class="container">
	<div class="jumbotron">
		<h2>First NodeJS <img src="lang-logo.png" alt="NodeJS Logo"> App Developed by Yogesh rathod.</h2>
	</div>
	<h2 class="media-heading">
		List of All Registered users is Below
	</h2>
	<%- messages() %>
	<div class="table table-bordered">
	<% if (data) { %>
		<div class="thead table-bordered">
			<div class="tr clearfix">
				<div class="th col-xs-2">Full Name</div>
				<div class="th col-xs-2">Profile Image</div>
				<div class="th col-xs-2">Email</div>
				<div class="th col-xs-2">Mobile Number</div>
				<div class="th col-xs-2">Actions</div>
			</div>
		</div>
		<div class="tbody">
	    <% data.forEach(function(newData) { %>
			<div class="tr clearfix table-bordered">
				<div class="td col-xs-2"><%= newData.fullname %></div>
				<div class="td col-xs-2">
					<!-- <img class="img-responsive" src="/uploads/default.jpg"> -->
					<img class="img-responsive" src="/uploads/<%= newData.profileimage %>">
				</div>
				<div class="td col-xs-2"><%= newData.email %></div>
				<% if (newData.mobilenumber) { %>
					<div class="td col-xs-2"><%= newData.mobilenumber %></div>
				<% } else { %>
					<div class="td col-xs-2">Not Given</div>
				<% } %>
				<div class="td col-xs-2">
					<a href="/edituser/<%= newData.id %>" class="btn btn-primary" >Edit</a>
					<a href="/delete/<%= newData.id %>" class="btn btn-danger" >Delete</a>
				</div>
			</div>
	    <% }); %>
		</div>
  <% } else { %>
  	<div><span>No Data Found</span></div>
  <% } %>
	</div>
</div>